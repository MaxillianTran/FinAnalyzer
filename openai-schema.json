{
  "openapi": "3.1.0",
  "info": {
    "title": "Yahoo Finance Stock Data API",
    "description": "API for retrieving stock market data from Yahoo Finance via RapidAPI. This API provides real-time quotes, historical data, and financial statistics.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://yahoo-finance15.p.rapidapi.com"
    }
  ],
  "paths": {
    "/api/v1/markets/stock/quotes": {
      "get": {
        "operationId": "getStockQuote",
        "summary": "Get real-time stock quote",
        "description": "Retrieves current stock price, volume, and basic quote information for a given stock symbol",
        "parameters": [
          {
            "name": "ticker",
            "in": "query",
            "description": "Stock ticker symbol (e.g., AAPL, TSLA, MSFT)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with stock quote data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "body": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/markets/stock/history": {
      "get": {
        "operationId": "getStockHistory",
        "summary": "Get historical stock data",
        "description": "Retrieves historical price data for a stock over a specified time period",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "description": "Stock ticker symbol (e.g., AAPL, TSLA, MSFT)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "interval",
            "in": "query",
            "description": "Time interval for data points (1d, 1wk, 1mo)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1d", "1wk", "1mo"],
              "default": "1d"
            }
          },
          {
            "name": "range",
            "in": "query",
            "description": "Time range for historical data (1d, 5d, 1mo, 3mo, 6mo, 1y, 5y, max)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1d", "5d", "1mo", "3mo", "6mo", "1y", "5y", "max"],
              "default": "1mo"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with historical stock data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "body": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/markets/stock/statistics": {
      "get": {
        "operationId": "getStockStatistics",
        "summary": "Get stock financial statistics",
        "description": "Retrieves comprehensive financial statistics including market cap, P/E ratio, dividend yield, and other key metrics",
        "parameters": [
          {
            "name": "ticker",
            "in": "query",
            "description": "Stock ticker symbol (e.g., AAPL, TSLA, MSFT)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with stock statistics",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "body": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/markets/stock/summary": {
      "get": {
        "operationId": "getStockSummary",
        "summary": "Get stock summary information",
        "description": "Retrieves a comprehensive summary of a stock including company profile, key statistics, and current market data",
        "parameters": [
          {
            "name": "ticker",
            "in": "query",
            "description": "Stock ticker symbol (e.g., AAPL, TSLA, MSFT)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with stock summary",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "body": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "rapidapi-key": {
        "type": "apiKey",
        "name": "X-RapidAPI-Key",
        "in": "header"
      },
      "rapidapi-host": {
        "type": "apiKey",
        "name": "X-RapidAPI-Host",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "rapidapi-key": []
    },
    {
      "rapidapi-host": []
    }
  ]
}
